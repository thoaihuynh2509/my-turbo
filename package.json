{
  "name": "my-turborepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "ci:version": "changeset version && npm run build",
    "ci:release": "changeset publish",
    "storybook": "turbo run storybook:dev --filter=storybook",
    "storybook:build": "turbo run storybook:build --filter=storybook",
    "migrate": "node scripts/migrate.js",
    "migrate:list": "node scripts/migrate.js list",
    "migrate:dry-run": "node scripts/migrate.js run v1-to-v2 --dry-run",
    "migrate:run": "node scripts/migrate.js run v1-to-v2",
    "test:migrations": "jest scripts/migrations/__tests__"
  },
  "devDependencies": {
    "@changesets/changelog-git": "^0.2.1",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
