{
  "name": "@repo/design-tokens",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "main": "index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./tailwind": {
      "types": "./dist/tailwind.d.ts",
      "import": "./dist/tailwind.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/tailwind.ts --format esm,cjs --dts --clean",
    "dev": "tsup src/index.ts src/tailwind.ts --format esm,cjs --dts --watch",
    "clean": "rm -rf .turbo dist node_modules",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  },
