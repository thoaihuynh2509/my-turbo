{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", 
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,           // Táº¡o file .d.ts cho TypeScript
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",            // Output folder
    "rootDir": "./src"             // Source folder
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}