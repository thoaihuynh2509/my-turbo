{
  "name": "@repo/ui",
  "version": "0.1.1",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./tailwind": {
      "types": "./dist/tailwind.d.ts",
      "import": "./dist/tailwind.js"
    }
  },
  "scripts": {
    "build": "pnpm run build:tsup && pnpm run build:css",
    "build:tsup": "tsup src/index.ts src/**/*.tsx --format esm,cjs --dts --external react,react-dom",
    "build:css": "tailwindcss -i ./src/input.css -o ./dist/styles.css --minify",
    "dev": "pnpm run build:tsup -- --watch & pnpm run dev:css",
    "dev:css": "npx tailwindcss -i ./src/input.css -o ./dist/styles.css --watch"
  },
  "devDependencies": {
    "@repo/design-tokens": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/cli": "^4.1.14",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.34.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "tsup": "^8.0.2",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
